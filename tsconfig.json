{
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [ "es2015", "DOM", "es6" ],
    "baseUrl": ".",
    "paths": {
      "$components/*": [ "src/components/*" ],
      "$containers/*": [ "src/containers/*" ],
      "$constants/*": [ "src/constants/*" ],
      "$sprites/*": [ "src/sprites/*" ],
      "$config/*": [ "./config/*" ],
      "$styles/*": [ "src/styles/*" ],
      "$redux/*": [ "src/redux/*" ],
      "$utils/*": [ "src/utils/*" ],
    }
  },
  "include": [
    "./src/**/*",
    "./custom.d.ts"
  ]
}
